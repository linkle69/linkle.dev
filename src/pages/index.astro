                    in srgb,
                    var(--accentColor) 30%,
                    rgba(255, 255, 255, 0.2)
                );
            }

            *::selection {
                background-color: var(--selectionColor);
            }

            body {
                background-color: var(--bg-color);
                color: var(--text-color);
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
                padding: 20px;
            }

            .profile-container {
                text-align: center;
            }

            .profile-header {
                margin-bottom: 24px;
            }

            .profile-pic {
                width: 128px;
                height: 128px;
                border-radius: 50%;
                background-color: var(--card-bg);
                border-color: var(--card-bg);
            }

            .profile-name {
                font-size: 32px;
                margin-bottom: 4px;
            }

            .profile-handle {
                color: color-mix(in srgb, var(--accentColor) 75%, #ffffff);
                font-size: 18px;
                margin-bottom: 24px;
            }

            .about-section {
                background-color: var(--card-bg);
                padding: 16px;
                border-radius: 8px;
                margin-bottom: 24px;
                text-align: left;
            }

            .about-section h2 {
                margin-bottom: 16px;
                text-align: center;
            }

            .about-section p,
            .about-section ul {
                color: var(--secondary-text);
            }

            .about-section ul {
                margin-left: 20px;
            }

            .about-section a {
                color: color-mix(in srgb, var(--accentColor) 75%, #ffffff);
                text-decoration: none;
            }

            .about-section a:hover {
                color: color-mix(in srgb, var(--accentColor) 55%, #ffffff);
                text-decoration: underline;
            }

            .socials {
                margin-bottom: 24px;
            }

            .social-links {
                display: flex;
                gap: 12px;
                justify-content: center;
                margin-top: 16px;
            }

